{
  "manifest_version": 3,
  "name": "Chrome Time Tracker",
  "version": "1.0.0",
  "description": "Automatically track time spent on websites with calendar-based statistics interface",
  
  "permissions": [
    "tabs",
    "storage",
    "windows"
  ],
  
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "action": {
    "default_popup": "",
    "default_title": "Chrome Time Tracker",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [{
    "resources": ["pages/statistics.html", "pages/welcome.html"],
    "matches": ["<all_urls>"]
  }]
}